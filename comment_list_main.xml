<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4" >

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#101119" >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="美咖来了"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/lllllllllllllllllllllllllllllllllll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="4.03" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/comment_list_all_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="#101119"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_list_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(78)"
                    android:textColor="#101119"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_list_underline1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#101119" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#515151" 
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/comment_list_good_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评"
                    android:textColor="#101119"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_list_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(78)"
                    android:textColor="#101119"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_list_underline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#101119"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#515151" 
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"  />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/comment_list_medium_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中评"
                    android:textColor="#101119"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_list_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(78)"
                    android:textColor="#101119"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_list_underline3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#101119"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#515151" 
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"  />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/comment_list_bad_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="差评"
                    android:textColor="#101119"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_list_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(78)"
                    android:textColor="#101119"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_list_underline4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#101119"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lllllllllllllllllllllllllllllllllll"
        android:background="#d1d1d1" />

    <ListView
        android:id="@+id/comment_list_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1" >

    </ListView>

</RelativeLayout>