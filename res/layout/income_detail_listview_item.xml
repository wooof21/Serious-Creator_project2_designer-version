<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:id="@+id/income_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#101119"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/income_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#101119"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/income_item_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#e62e2e"
            android:textSize="12sp" />
        <ImageView 
            android:id="@+id/income_item_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/up_dark"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f4f4" />
    
    
    <LinearLayout 
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dfdfdf"
        android:visibility="gone" 
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号	："
            android:textSize="11sp"
            android:textColor="#101119"
            android:layout_marginLeft="50dp"
            />
            <TextView 
                android:id="@+id/income_item_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1011111101010101001"
                android:textSize="11sp"
                android:textColor="#101119"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            >
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="妆容		："
            android:textSize="11sp"
            android:textColor="#101119"
            android:layout_marginLeft="50dp"
            />
            <TextView 
                android:id="@+id/income_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新娘妆"
                android:textSize="11sp"
                android:textColor="#101119"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>