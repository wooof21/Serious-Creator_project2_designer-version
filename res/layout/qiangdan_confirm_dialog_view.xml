<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" 
    android:paddingBottom="20dp">

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#101119" >

        <ImageView
            android:id="@+id/qiangdan_confirm_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="确认信息"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#101119"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="价格："
                android:layout_weight="0.25"
                android:gravity="right"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:layout_weight="0.75"
                android:text=""
                android:textColor="#e62e2e"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:weightSum="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="电话："
                android:layout_weight="0.25"
                android:gravity="right"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:layout_weight="0.75"
                android:text="成功抢单后可查看"
                android:textColor="#101119"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="服务时间："
                android:layout_weight="0.25"
                android:gravity="right"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_dt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:layout_weight="0.75"
                android:text=""
                android:textColor="#2697e6"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="服务地址："
                android:layout_weight="0.25"
                android:gravity="right"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:singleLine="false"
                android:layout_weight="0.75"
                android:text=""
                android:textColor="#101119"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="备注："
                android:layout_weight="0.25"
                android:gravity="right"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qiangdan_confirm_dialog_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:layout_weight="0.75"
                android:singleLine="false"
                android:text=""
                android:textColor="#101119"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/qiangdan_confirm_dialog_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/tvbg_pink"
        android:text="确认抢单"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#ffffff"
        android:textSize="18sp" 
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 抢单成功需完成此单才能继续抢单"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#101119"
        android:layout_marginTop="10dp"
        />
</LinearLayout>